    <header class="py-5 bg-light border-bottom mb-4">
        
        <div class="container">
            <div class="text-center my-5">
                <h1 class="fw-bolder">Welcome to My Blog</h1>
            </div>
        </div>
    </header>
    <!-- Page content-->
    <div class="container ">
        <!-- Nested row for non-featured blog posts-->
        <div class="align-items-center">
            <div style="display: flex;
            justify-content: center;">
                <img class="" src="/uploads/images/article/<%= article.mainPhoto %>" alt=""
                    style="width: 100% ; height: 450px " />
            </div>
            <div class="col-lg-12" style="display: flex;
            justify-content: center;">
                <!-- Blog post-->
                <div class="card mb-4 col-lg-12">
                    <div class="card-body col-lg-12">
                        <div class="small text-muted">
                           date :  <%= article.createAt.toLocaleDateString('en-US') %>
                        </div>
                        <h2 class="card-title h4">
                           Title : <%= article.title %>
                        </h2>
                        <hr>
                        <p class="card-text">
                            <%= article.body %>
                        </p>
                        <p class="card-text">
                            <%= article.author.userName %>
                        </p>
                    </div>
                </div>
            </div>
            <form action="/comment/createComment" id="formAddArticle">
                <div class="col-md-12"><label class="labels">comment</label>
                    <input type="text" required class="form-control" name="text" id="input_comment"></input>
                </div>
                <input name="id" type="text" class="form-control d-none" value="<%= article.id %>">

                <button type="submit" id="liveToastBtn" class="btn btn-block btn-primary mt-2" value="">submit</button>
            </form>
