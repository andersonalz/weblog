<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">CommentManager</a>
            <!-- <span class="navbar-toggler-icon"></span> -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item ">
                <a class="nav-link btn  btn-dark  text-white ms-3" href="/admin/dashboardAdmin/">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link btn  btn-warning  text-white mx-3" href="/admin/findBloggers">Find</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"></a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled"></a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Text</th>
            <th scope="col">article</th>
            <th scope="col">user</th>
            <th scope="col">createAt</th>
            <th scope="col">Active</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < Comment.length; index++ ) { %>
              <td><%= index + 1 %></td>
              <td><%= Comment[index].Text %></td>
              <td><%= Comment[index].article %></td>
              <td><%= Comment[index].user %></td>
              <td><%= Comment[index].CreateAt %></td>
              <td><%= Comment[index].Active %></td>
              <td><a class=" btn  btn-success  text-white " id="active" href="/admin/ActiveComment/<%= Comment[index]._id %>">Active</a></td>
              <td><a class=" btn  btn-danger  text-white " id="delete" href="/comment/deleteComment/<%= Comment[index]._id %>">delete</a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
     <script src="/javascript/blogger.js"></script>
  </body>

</html>